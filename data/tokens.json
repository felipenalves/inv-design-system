{
  "brand": {
    "name": "INV",
    "tagline": "Design System INV",
    "brand_attributes": [
      "minimal",
      "sophisticated",
      "architectural",
      "systematic"
    ],
    "positioning": "Premium design system focused on brand positioning infrastructure",
    "logo": {
      "type": "wordmark_with_icon",
      "text": "INV",
      "font": "Lora",
      "icon": {
        "type": "architectural_grid",
        "concept": "systematic_structure"
      }
    }
  },

  "color_system": {
    "philosophy": "Neutral base (light/dark) + taupe as brand identity + blue/green for data/status",
    "light_mode": {
      "primary": {
        "background_primary": "#fafafa",
        "background_secondary": "#ffffff",
        "background_tertiary": "#f0f0f0",
        "text_primary": "#0a0a0a",
        "text_secondary": "#1a1a1a",
        "text_tertiary": "#757575",
        "text_disabled": "#b0b0b0"
      },
      "accent_colors": {
        "primary": "#E6E0D4",
        "primary_hover": "#D9D3C7",
        "primary_active": "#C8C1B0",
        "primary_subtle": "#F5F2ED",
        "secondary": "#D6D5D4",
        "secondary_hover": "#C8C7C6",
        "secondary_active": "#B3B2B1",
        "secondary_subtle": "#EDEDEC",
        "tertiary": "#608296",
        "tertiary_hover": "#4A5F7A",
        "tertiary_active": "#3A4F6A",
        "tertiary_subtle": "#A0B0BE"
      },
      "borders": {
        "default": "#e0e0e0",
        "subtle": "#ebebeb",
        "strong": "#c8c8c8"
      },
      "semantic": {
        "success": "#00bb7f",
        "warning": "#f99c00",
        "error": "#fb2c36",
        "info": "#3080ff"
      }
    },
    "dark_mode": {
      "primary": {
        "background_primary": "#0a0a0a",
        "background_secondary": "#121212",
        "background_tertiary": "#1f1f1f",
        "text_primary": "#fafafa",
        "text_secondary": "#e0e0e0",
        "text_tertiary": "#909090",
        "text_disabled": "#484848"
      },
      "accent_colors": {
        "primary_taupe": "#c4b5a8",
        "primary_taupe_hover": "#d4c5b8",
        "primary_taupe_active": "#b4a598",
        "primary_taupe_subtle": "#1e1a18",
        "secondary_blue": "#3080ff",
        "secondary_blue_hover": "#5096ff",
        "secondary_blue_subtle": "#0d1a33",
        "tertiary_green": "#00d294",
        "tertiary_green_hover": "#00e8a8",
        "tertiary_green_subtle": "#001a0f"
      },
      "borders": {
        "default": "#242424",
        "subtle": "#1a1a1a",
        "strong": "#2e2e2e"
      },
      "semantic": {
        "success": "#00d294",
        "warning": "#f99c00",
        "error": "#fb2c36",
        "info": "#3080ff"
      }
    }
  },

  "typography": {
    "philosophy": "Lora (display/authority) + Geist (interface/legibility) + JetBrains Mono (data/technical)",
    "font_families": {
      "display": {
        "name": "Lora",
        "fallback": ["Georgia", "serif"],
        "weight_range": [400, 600, 700],
        "uso": "Títulos principais, hero sections, impacto editorial"
      },
      "interface": {
        "name": "Geist",
        "fallback": ["ui-sans-serif", "system-ui", "sans-serif"],
        "weight_range": [400, 500, 600],
        "uso": "Texto corrido, descrições, UI elements (botões, forms, labels)"
      },
      "data": {
        "name": "JetBrains Mono",
        "fallback": ["ui-monospace", "Monaco", "monospace"],
        "weight_range": [400, 500, 600],
        "uso": "Métricas, números, KPIs, análises técnicas, dashboards"
      }
    },
    "font_scales": {
      "display_xl": {
        "font": "Lora",
        "size": "56px",
        "weight": 700,
        "line_height": 1.0,
        "letter_spacing": "-0.03em"
      },
      "display_large": {
        "font": "Lora",
        "size": "48px",
        "weight": 700,
        "line_height": 1.1,
        "letter_spacing": "-0.02em"
      },
      "heading_1": {
        "font": "Lora",
        "size": "36px",
        "weight": 700,
        "line_height": 1.15,
        "letter_spacing": "-0.01em"
      },
      "heading_2": {
        "font": "Lora",
        "size": "28px",
        "weight": 700,
        "line_height": 1.2,
        "letter_spacing": "0"
      },
      "heading_3": {
        "font": "Geist",
        "size": "22px",
        "weight": 600,
        "line_height": 1.3,
        "letter_spacing": "0"
      },
      "body_large": {
        "font": "Geist",
        "size": "18px",
        "weight": 400,
        "line_height": 1.6,
        "letter_spacing": "0.005em"
      },
      "body_regular": {
        "font": "Geist",
        "size": "16px",
        "weight": 400,
        "line_height": 1.6,
        "letter_spacing": "0"
      },
      "body_small": {
        "font": "Geist",
        "size": "14px",
        "weight": 400,
        "line_height": 1.5,
        "letter_spacing": "0"
      },
      "label": {
        "font": "JetBrains Mono",
        "size": "12px",
        "weight": 500,
        "line_height": 1.4,
        "letter_spacing": "0.02em"
      },
      "caption": {
        "font": "JetBrains Mono",
        "size": "11px",
        "weight": 400,
        "line_height": 1.3,
        "letter_spacing": "0.01em"
      },
      "technical_large": {
        "font": "JetBrains Mono",
        "size": "16px",
        "weight": 600,
        "line_height": 1.5,
        "letter_spacing": "0"
      },
      "technical_small": {
        "font": "JetBrains Mono",
        "size": "12px",
        "weight": 400,
        "line_height": 1.4,
        "letter_spacing": "0"
      }
    }
  },

  "spacing_system": {
    "tokens": {
      "xs": "2px",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "2xl": "24px",
      "3xl": "32px",
      "4xl": "48px",
      "5xl": "64px",
      "6xl": "80px"
    }
  },

  "border_radius": {
    "none": "0px",
    "small": "4px",
    "medium": "8px",
    "large": "12px",
    "xlarge": "16px",
    "full": "50%"
  },

  "shadows": {
    "none": "none",
    "soft": "0 2px 4px rgba(31, 23, 24, 0.08)",
    "light": "0 2px 8px rgba(31, 23, 24, 0.12)",
    "medium": "0 4px 16px rgba(31, 23, 24, 0.16)",
    "elevated": "0 8px 24px rgba(31, 23, 24, 0.20)",
    "floating": "0 16px 32px rgba(31, 23, 24, 0.24)"
  }
}
